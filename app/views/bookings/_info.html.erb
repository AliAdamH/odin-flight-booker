<div class="card">
    <div class="card-header">
        <header class="header">
            Flight Number : <%= flight.id %>
        </header>
    </div>
    <div class="card-content">
        <p class="content">
            From Airport : <%= flight.departure_airport.code %>
        </p>
        <p class="content">
            To Airport : <%= flight.arrival_airport.code %>
        </p>
        <p class="content">
            Flying At : <%= flight.start %>
        </p>
    </div>
</div>